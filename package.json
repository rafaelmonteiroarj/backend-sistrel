{
   "name": "express-graphql-typeorm",
   "version": "1.0.0",
   "author": "rafaelmonteiroarj",
   "description": "Boilerplate - With GraphQL and Typeorm",
   "main": "index.js",
   "keywords": [
      "nodejs",
      "typescript",
      "express",
      "graphQL",
      "typeORM",
      "jest",
      "api"
   ],
   "scripts": {
      "build": "rimraf ./build && tsc",
      "build:watch": "tsc -w",
      "lint": "eslint ./src ./test --ext .ts",
      "lint:fix": "eslint ./src ./test --ext .ts --fix",
      "live-reload": "npm run build && npx concurrently \"npm run build:watch\"  \"npm run start\"",
      "prettier:format": "prettier src/**/*.ts --write",
      "prettier:check": "prettier --check src/**/*.ts",
      "postinstall": "npm run build",
      "start": "npm run build && nodemon build/index.js --watch",
      "start:dev": "nodemon",
      "test:e2e": "jest --projects ./test --runInBand",
      "test:unit": "jest --runInBand",
      "typeorm": "ts-node-dev -r tsconfig-paths/register ./node_modules/typeorm/cli.js"
   },
   "husky": {
      "hooks": {
         "pre-commit": "lint-staged"
      }
   },
   "lint-staged": {
      "src/**/*.ts": [
         "npm run prettier:format",
         "npm run lint:fix",
         "npm run lint",
         "git add"
      ]
   },
   "license": "ISC",
   "dependencies": {
      "apollo-server": "^2.19.1",
      "apollo-server-express": "^2.19.1",
      "bcryptjs": "^2.4.3",
      "body-parser": "^1.19.0",
      "class-validator": "^0.12.2",
      "config": "^3.3.2",
      "cors": "^2.8.5",
      "date-fns": "^2.16.1",
      "date-fns-tz": "^1.0.12",
      "express": "^4.17.1",
      "express-pino-logger": "^5.0.0",
      "fs-capacitor": "^6.2.0",
      "graphql": "^15.4.0",
      "graphql-upload": "^11.0.0",
      "http-status-codes": "^2.1.4",
      "lodash": "^4.17.20",
      "mysql": "^2.18.1",
      "nodemailer": "^6.4.17",
      "nodemailer-handlebars": "^1.0.1",
      "nodemon": "^2.0.7",
      "pg": "^8.4.0",
      "pino": "^6.7.0",
      "pino-http": "^5.3.0",
      "puppeteer": "^5.4.1",
      "reflect-metadata": "^0.1.13",
      "tsyringe": "^4.4.0",
      "type-graphql": "^1.1.1",
      "typedi": "^0.8.0",
      "typeorm": "0.2.29",
      "typeorm-typedi-extensions": "^0.2.3",
      "typescript": "^4.1.3"
   },
   "devDependencies": {
      "@types/bcryptjs": "^2.4.2",
      "@types/config": "0.0.36",
      "@types/cors": "^2.8.7",
      "@types/express": "^4.17.8",
      "@types/express-pino-logger": "^4.0.2",
      "@types/graphql": "^14.5.0",
      "@types/jest": "^26.0.15",
      "@types/lodash": "^4.14.165",
      "@types/node": "^8.0.29",
      "@types/nodemailer": "^6.4.0",
      "@types/pino": "^6.3.3",
      "@types/puppeteer": "^5.4.0",
      "@typescript-eslint/eslint-plugin": "^4.6.1",
      "@typescript-eslint/parser": "^4.6.1",
      "dotenv": "^8.2.0",
      "eslint": "^7.12.1",
      "eslint-config-prettier": "^6.15.0",
      "eslint-import-resolver-typescript": "^2.3.0",
      "eslint-plugin-import": "^2.22.1",
      "eslint-plugin-prettier": "^3.1.4",
      "husky": "^4.3.0",
      "jest": "^26.5.0",
      "lint-staged": "^10.4.0",
      "pino-pretty": "^4.3.0",
      "prettier": "^2.1.2",
      "rimraf": "^3.0.2",
      "ts-jest": "^26.4.1",
      "ts-node": "3.3.0",
      "tsconfig-paths": "^3.9.0"
   }
}
